<Window x:Class="BillTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BillTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.Row="0" FontSize="18">
            <MenuItem Header="_File">
                <MenuItem x:Name="exitMenuItem" Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Clients">
                <MenuItem x:Name="loadClientsMenuItem" Header="_Load Clients" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
